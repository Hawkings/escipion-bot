{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM"
    ],
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "bin",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "pages/**/*",
    "components/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
